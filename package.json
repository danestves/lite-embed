{
  "name": "lite-embed-project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run prepublish",
    "clean": "lerna clean -y && lerna bootstrap && lerna exec 'rm -rf ./dist'",
    "lerna": "lerna",
    "prepublishOnly": "lerna run prepublish",
    "publish:canary": "git checkout canary && git pull && lerna version prerelease --preid canary --force-publish",
    "publish:stable": "lerna version --force-publish"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.6.4",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vite-tsconfig-paths": "^3.4.1"
  }
}
